@model MovieRental.Models.ViewModels.CustomerFormViewModel
@{
    ViewData["Title"] = "Customer Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Customer</h2>

@using (Html.BeginForm("Create", "Customers"))
{
<div class="col-sm-6">
    <div class="form-group">
        @Html.LabelFor(vm => vm.Customer.Name)
        @Html.TextBoxFor(vm => vm.Customer.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(vm => vm.Customer.BirthDate)
        @Html.TextBoxFor(vm => vm.Customer.BirthDate, "{0:d MMM yyyy}", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(vm => vm.Customer.MembershipTypeId)
        @Html.DropDownListFor(vm => vm.Customer.MembershipTypeId, new SelectList(Model.MembershipTypes, "Id", "Name"), new { @class = "form-control", style = "width: auto" })
    </div>
    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(vm => vm.Customer.IsSubscribeToNewsLetter) Subscribe to Newsletter
        </label>
    </div>
    @Html.HiddenFor(vm=>vm.Customer.Id)
    <button type="submit" class="btn btn-primary">Save</button>
</div>
}
